<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Top Illustration -->
        <ImageView
            android:id="@+id/ivIllustration"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/ic_fitness_illustration"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's complete your profile"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivIllustration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It will help us to know more about you!"
            android:textColor="#777777"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Gender Selection -->
        <LinearLayout
            android:id="@+id/llGender"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_input"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_gender"
                app:tint="#AAAAAA"/>
            
            <TextView
                android:id="@+id/tvGenderValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Choose Gender"
                android:textColor="#555555"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Date of Birth -->
        <LinearLayout
            android:id="@+id/llDob"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_input"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/llGender">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings_edit"
                app:tint="#AAAAAA"/>
            
            <TextView
                android:id="@+id/tvDobValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Date of Birth"
                android:textColor="#555555"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Weight -->
        <LinearLayout
            android:id="@+id/llWeight"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/llDob">
            
            <EditText
                android:id="@+id/etWeight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Your Weight"
                android:inputType="numberDecimal"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:textColor="#333333"/>
            
            <TextView
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_unit_badge"
                android:text="KG"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Height -->
        <LinearLayout
            android:id="@+id/llHeight"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/llWeight">
            
            <EditText
                android:id="@+id/etHeight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Your Height"
                android:inputType="numberDecimal"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:textColor="#333333"/>
            
            <TextView
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_unit_badge"
                android:text="CM"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="NEXT  â†’"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="#94B2FF"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/llHeight"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
