<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_background_color">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="36dp"
        >

        <!-- Pulse Ring 1 (Largest) -->
        <ImageView
            android:id="@+id/pulseRing1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/bg_pulse_ring"
            android:alpha="0.2"/>

        <!-- Pulse Ring 2 (Medium) -->
        <ImageView
            android:id="@+id/pulseRing2"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:src="@drawable/bg_pulse_ring"
            android:alpha="0.4"/>

        <!-- Pulse Ring 3 (Smallest) -->
        <ImageView
            android:id="@+id/pulseRing3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/bg_pulse_ring"
            android:alpha="0.6"/>

        <!-- Center Content Group (Device + Text) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Device Icon Container -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">
                
                <View
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_white"/>

                <ImageView
                    android:id="@+id/centerIcon"
                    android:layout_width="60dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_device_vertical_shape"
                    android:scaleType="fitCenter"/>
            </FrameLayout>

            <!-- Text Below Image -->

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="24dp">

        <TextView
            android:text="Whoâ€™s using HydraSense?"
            android:textColor="@color/app_text_primary"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <!-- Placeholder for potential dynamic user avatars -->
        <LinearLayout
            android:id="@+id/userListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/app_accent_color"
            app:elevation="4dp"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:text="Register"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/app_surface_color"
            android:textColor="@color/app_accent_color"
            app:elevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</LinearLayout>
