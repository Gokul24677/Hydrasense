<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Standardized Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/app_surface_color"
                android:padding="20dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_back_arrow"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/app_text_primary"
                    android:contentDescription="@string/desc_back"
                    android:padding="12dp"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/hydration_analysis"
                    android:textColor="@color/app_text_primary"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/biological_insights"
                    android:textColor="@color/app_text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Reliability Focused Status Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#F0F0F0"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/analysisProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="38"
                            android:progressDrawable="@drawable/custom_progress_drawable" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/needs_hydration_warning"
                            android:textColor="#D32F2F"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                            
                        <TextView
                            android:id="@+id/tvRecommended"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/liters_left_label"
                            android:textColor="@color/app_text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Detailed Stats Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="1dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#EEEEEE"
                        tools:ignore="UnusedAttribute">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <TextView 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/urine_ph" 
                                android:textSize="12sp" 
                                android:textColor="#616161"/>
                            <TextView 
                                android:id="@+id/tvPh" 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_dash" 
                                android:textSize="18sp" 
                                android:textStyle="bold" 
                                android:textColor="@color/app_text_primary" 
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="1dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#EEEEEE"
                        tools:ignore="UnusedAttribute">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <TextView 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/color_index" 
                                android:textSize="12sp" 
                                android:textColor="#616161"/>
                            <TextView 
                                android:id="@+id/tvColor" 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_dash" 
                                android:textSize="18sp" 
                                android:textStyle="bold" 
                                android:textColor="@color/app_text_primary" 
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Row: Specific Gravity & Fluid Balance -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="1dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#EEEEEE"
                        tools:ignore="UnusedAttribute">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <TextView 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/specific_gravity_label" 
                                android:textSize="12sp" 
                                android:textColor="#616161"/>
                            <TextView 
                                android:id="@+id/tvSpecificGravity" 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_sg" 
                                android:textSize="18sp" 
                                android:textStyle="bold" 
                                android:textColor="@color/app_text_primary" 
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="1dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#EEEEEE"
                        tools:ignore="UnusedAttribute">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <TextView 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fluid_balance_label" 
                                android:textSize="12sp" 
                                android:textColor="#616161"/>
                            <TextView 
                                android:id="@+id/tvFluidBalance" 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_balance" 
                                android:textSize="18sp" 
                                android:textStyle="bold" 
                                android:textColor="@color/app_text_primary" 
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Row: Daily Goal & Optimal pH -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="1dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#EEEEEE"
                        tools:ignore="UnusedAttribute">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <TextView 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily_goal_label" 
                                android:textSize="12sp" 
                                android:textColor="#616161"/>
                            <TextView 
                                android:id="@+id/tvDailyGoal" 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_goal" 
                                android:textSize="18sp" 
                                android:textStyle="bold" 
                                android:textColor="@color/app_text_primary" 
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="1dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#EEEEEE"
                        tools:ignore="UnusedAttribute">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <TextView 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/optimal_ph_label" 
                                android:textSize="12sp" 
                                android:textColor="#616161"/>
                            <TextView 
                                android:id="@+id/tvOptimalPh" 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_optimal" 
                                android:textSize="18sp" 
                                android:textStyle="bold" 
                                android:textColor="@color/app_text_primary" 
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/intake_history"
                    android:textColor="@color/app_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRefresh"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:maxWidth="320dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/analyze_again"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="#1976D2"
                    android:textColor="@color/white"
                    app:cornerRadius="24dp"
                    app:elevation="4dp"/>

                <View android:layout_height="30dp" android:layout_width="match_parent"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_surface_color"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
